<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/question_type_card"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/medium_margin"
    app:cardCornerRadius="@dimen/small_margin"
    app:cardElevation="@dimen/small_margin"
    android:layout_gravity="center"
    tools:context=".ui.view.activities.MainActivity" >

    <!-- Layout que representa el icono y el tipo de la tarjeta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/medium_margin">

        <!-- Icono del tipo de la pregunta que representa la tarjeta -->
        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginBottom="@dimen/small_margin"
            android:contentDescription="@string/card_type_icon"
            app:tint="@color/blue_selected" />

        <!-- Nombre del tipo de pregunta que representa la tarjeta -->
        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/title_font_size" />

    </LinearLayout>

</androidx.cardview.widget.CardView>