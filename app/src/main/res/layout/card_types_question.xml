<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/question_type_card"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/small_margin"
    app:cardCornerRadius="@dimen/small_margin"
    app:cardElevation="@dimen/small_margin"
    android:layout_gravity="center"
    tools:context=".ui.view.MainActivity" >

    <!-- Layout que representa el icono y el tipo de la tarjeta -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/medium_margin">

        <!-- Icono del tipo de la pregunta que representa la tarjeta -->
        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginBottom="@dimen/small_margin"
            android:contentDescription="@string/card_type_icon_desc"
            app:tint="@color/blue_selected"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre del tipo de pregunta que representa la tarjeta -->
        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/small_margin"
            android:textSize="@dimen/font_size"
            tools:ignore="SmallSp"
            android:lines="2"
            app:layout_constraintTop_toBottomOf="@id/card_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>