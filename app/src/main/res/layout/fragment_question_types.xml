<?xml version="1.0" encoding="utf-8"?>
<!-- Fragmento para elegir el tipo de pregunta que vamos a crear -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_height="match_parent"
    tools:context=".ui.view.MainActivity">

    <!-- Layout para crear preguntas de si/no -->
    <FrameLayout
        android:id="@+id/yes_no_card_container"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/boolean_card_container" />

    <!-- Layout para crear preguntas de verdadero/falso -->
    <FrameLayout
        android:id="@+id/boolean_card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/yes_no_card_container"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Layout para crear preguntas de estrellas -->
    <FrameLayout
        android:id="@+id/stars_card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        app:layout_constraintTop_toBottomOf="@id/yes_no_card_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/numeric_card_container" />

    <!-- Layout para crear preguntas numericas -->
    <FrameLayout
        android:id="@+id/numeric_card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_margin"
        app:layout_constraintTop_toBottomOf="@id/boolean_card_container"
        app:layout_constraintStart_toEndOf="@id/stars_card_container"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Layout para crear preguntas de otros -->
    <FrameLayout
        android:id="@+id/other_card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stars_card_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/small_margin"
        app:layout_constraintTop_toBottomOf="@id/other_card_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageButton
            android:id="@+id/hotspot_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="@dimen/small_margin"
            android:background="@android:color/transparent"
            android:contentDescription="@string/hotspot_qr_desc" />

        <TextView
            android:id="@+id/hotspot_qr_ssid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/small_margin" />

        <TextView
            android:id="@+id/hotspot_qr_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/small_margin" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>