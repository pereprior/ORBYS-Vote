<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="@dimen/activity_layout_width"
    android:layout_height="@dimen/activity_layout_height"
    tools:context=".ui.view.activities.MainActivity"
    android:background="@drawable/bg_main" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo de la empresa -->
        <ImageView
            android:id="@+id/download_button"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:paddingStart="@dimen/large_margin"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_logo_description"
            android:src="@drawable/orbys_logo"
            tools:ignore="RtlSymmetry" />

        <!-- BotÃ³n de cerrar la actividad -->
        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/exit_button"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/ic_close"
            app:tint="@color/blue_selected" />

    </LinearLayout>

    <!-- Contenedor de los fragmentos de la actividad-->
    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="@dimen/activity_layout_width"
        android:layout_height="@dimen/activity_layout_height"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>