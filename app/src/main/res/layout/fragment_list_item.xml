<?xml version="1.0" encoding="utf-8"?>
<!-- Tarjeta con la informacion de una pregunta de la lista -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="48dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:elevation="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Título de la pregunta -->
        <TextView
            android:id="@+id/title_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="20sp" />

        <!-- Contenedor para las gestionar las acciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|bottom" >

            <!-- Botón de lanzar -->
            <ImageButton
                android:id="@+id/launch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:src="@drawable/baseline_rocket_launch_24"
                android:background="@android:color/transparent"
                android:contentDescription="@string/launch_button"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="8dp" />

            <!-- Botón de editar -->
            <ImageButton
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:src="@drawable/baseline_edit_24"
                android:background="@android:color/transparent"
                android:contentDescription="@string/edit_button" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>