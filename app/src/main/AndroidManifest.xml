<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos de internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- Permisos para el Widget -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".QuizzApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OrbysQuizz"
        tools:targetApi="31">

        <!-- Actividad principal -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/ThemeDialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Actividad dialogo para lanzar preguntas -->
        <activity
            android:name=".ui.fragments.LaunchQuestionActivity"
            android:exported="false"
            android:theme="@style/ThemeDialog" /> <!-- Actividad generica de dialogo para añadir preguntas -->
        <activity
            android:name=".ui.fragments.add.AddFragment"
            android:exported="false"
            android:theme="@style/ThemeDialog" /> <!-- Actividad dialogo para añadir preguntas de si o no -->
        <activity
            android:name=".ui.fragments.add.AddYesNoQuestion"
            android:exported="false"
            android:theme="@style/ThemeDialog" /> <!-- Actividad dialogo para añadir preguntas de estrellas -->
        <activity
            android:name=".ui.fragments.add.AddStarsQuestion"
            android:exported="false"
            android:theme="@style/ThemeDialog" />

        <!-- Actividad dialogo para añadir preguntas de barra progresiva -->
        <activity
            android:name=".ui.fragments.add.AddSliderQuestion"
            android:exported="false"
            android:theme="@style/ThemeDialog" />

        <!-- Actividad dialogo para añadir preguntas de tipo otro -->
        <activity
            android:name=".ui.fragments.add.AddOtherQuestion"
            android:exported="false"
            android:theme="@style/ThemeDialog" />

        <!-- Servicio http -->
        <service android:name=".data.services.HttpService" android:enabled="true" />

        <!-- Servicio de widgets -->
        <service android:name=".ui.services.FloatingViewService" android:enabled="true"/>
    </application>

</manifest>